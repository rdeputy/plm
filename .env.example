# PLM Backend Configuration
# Copy this file to .env and fill in your values

# API Authentication
PLM_API_KEY=your-secure-api-key-here

# Database (SQLite for dev, PostgreSQL for production)
PLM_DATABASE_URL=sqlite:///./plm.db
# PLM_DATABASE_URL=postgresql://user:password@localhost:5432/plm

# PostgreSQL (for docker-compose.prod.yml)
POSTGRES_USER=plm
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=plm

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
PLM_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
PLM_LOG_LEVEL=INFO
PLM_LOG_FORMAT=json  # json or text

# Rate Limiting
PLM_RATE_LIMIT_ENABLED=true
PLM_RATE_LIMIT_RPM=60
PLM_RATE_LIMIT_BURST=10

# Supabase Authentication (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_ANON_KEY=your-anon-key

# Frontend Configuration (in frontend/.env)
# VITE_API_URL=http://localhost:8000
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key

# PgAdmin (optional, for docker-compose.prod.yml --profile tools)
PGADMIN_EMAIL=admin@plm.local
PGADMIN_PASSWORD=admin
